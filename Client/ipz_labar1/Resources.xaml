                            <TextBlock x:Name="Message"
                                       Margin="8,0,0,0"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       FontFamily="Calibri"
                                       FontSize="14"
                                       Foreground="Gray"
                                       IsHitTestVisible="False"
                                       Opacity="0.8"
                                       Padding="5,0,0,0"
